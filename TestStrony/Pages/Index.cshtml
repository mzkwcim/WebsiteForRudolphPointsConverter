@page
@model IndexModel
@{
    ViewData["Title"] = "Wyszukiwarka Zawodników";
}

<div class="text-center">
    <h1 class="display-4">Wyszukiwarka Zawodników</h1>

    <form method="post" asp-page-handler="Search">
        <div class="form-group">
            <label for="FirstName">Imię:</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" asp-for="FirstName" required>
        </div>

        <div class="form-group">
            <label for="LastName">Nazwisko:</label>
            <input type="text" class="form-control" id="LastName" name="LastName" asp-for="LastName" required>
        </div>

        <button type="submit" class="btn btn-primary">Szukaj</button>
    </form>

    @if (Model.SearchResults != null && Model.SearchResults.Any())
    {
        <div class="mt-4">
            <h2>Wyniki wyszukiwania:</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Dystans</th>
                        <th>Wynik</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.SearchResults)
                    {
                        <tr>
                            <td>@result.Dystans</td>
                            <td>@result.Wynik</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
